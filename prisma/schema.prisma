// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Reservations {
  id_reservations Int @id @default(autoincrement())
  id_user Int
  room_number Int
  check_in DateTime @default(now())
  check_out DateTime @default(now())
  adults Int
  children Int
  room Int
  room_type String
}

model Room {
  id_room Int @id @default(autoincrement())
  room_number Int @unique
  room_type String
  number_of_guests Int
  harga Decimal
  room_desc String
  img String
}

model User {
  id_user Int @id  @default(autoincrement())
  username String @unique
  password String
}