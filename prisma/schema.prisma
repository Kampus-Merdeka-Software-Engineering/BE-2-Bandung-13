// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Room {
  id        Int      @id @default(autoincrement())
  roomType  String
  price     Int
  imageUrl  String? // arti ?, not required, kalau pengen dibikin gapapa deh kalau datanya kosong
  description String
  capacityAdult  Int?
  capacityChild  Int?
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  password String?
  books    Book[]
}

model Book {
  id       Int      @id @default(autoincrement())
  email    String
  name     String?
  roomType String
  checkIn  DateTime
  checkOut DateTime
  adult    Int?
  child    Int?
  userId   Int?
  User     User? @relation(fields: [userId], references: [id])
}